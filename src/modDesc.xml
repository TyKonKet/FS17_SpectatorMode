<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<modDesc descVersion="39">
    <author>TyKonKet</author>
    <version>1.2.0.0</version>
    <title>
        <en>Spectator Mode</en>
        <nl>Toeschouwer Modus</nl>
        <fr>Mode spectateur</fr>
    </title>
    <description>
        <en>Spectator Mode</en>
        <nl>Met deze mod kun je een andere speler volgen en bekijken</nl>
        <fr>Ce mode vous permet de suivre d'autres joureurs.</fr>
    </description>
    <iconFilename>icon.dds</iconFilename>
    <multiplayer supported="true"/>
    <extraSourceFiles>
        <sourceFile filename="extensions/vehicleExtensions.lua" />
        <sourceFile filename="extensions/steerableExtensions.lua" />
        <sourceFile filename="extensions/playerExtensions.lua" />
        <sourceFile filename="extensions/extensions.lua" />
        <sourceFile filename="gui/spectateGui.lua" />
        <sourceFile filename="events/spectateEvent.lua" />
        <sourceFile filename="events/cameraChangeEvent.lua" />
        <sourceFile filename="events/spectateRejectedEvent.lua" />
        <sourceFile filename="spectatorModeRecorder.lua" />
        <sourceFile filename="spectatorMode.lua" />
        <sourceFile filename="spectatorModeServer.lua" />
    </extraSourceFiles>
    <inputBindings>
        <input name="TOGGLE_SPECTATOR_MODE" category="ONFOOT" key1="KEY_insert" key2="" device="0" button="" mouse="" visible="true" />
    </inputBindings>
    <l10n>   
        <text name="input_TOGGLE_SPECTATOR_MODE">
            <en>Start/Stop Spectator Mode</en>
            <it>Avvia/Interrompi la Spectator Mode</it>
            <nl>Start/Stop Kijkers Modus</nl>
            <fr>Mode spectateur : Activé / Désactivé</fr>
        </text>
        <text name="START_SPECTATOR_MODE">
            <en>Start Spectator Mode</en>
            <it>Avvia la Spectator Mode</it>
            <nl>Start Kijkers Modus</nl>
            <fr>Activer mode spectateur</fr>
        </text>
        <text name="STOP_SPECTATOR_MODE">
            <en>Stop Spectator Mode</en>
            <it>Interrompi la Spectator Mode</it>
            <nl>Stop Kijkers Modus</nl>
            <fr>Désactiver mode spectateur</fr>
        </text>
        <text name="SPECTATOR_MODE_NAME">
            <en>Spectator Mode</en>
            <nl>Kijkers Modus</nl>
            <fr>Mode spectateur</fr>
        </text>
        <text name="SPECTATOR_MODE_GUI_DIALOG_TEXT">
            <en>Select the player you want spectate</en>
            <it>Scegli il giocatore che vuoi guardare</it>
            <nl>Selecteer een speler die je wilt volgen</nl>
            <fr>Choix du joueur à suivre</fr>
        </text>
        <text name="SPECTATOR_MODE_GUI_DIALOG_MESSAGE">
            <en>There aren't players you can spectate!</en>
            <it>Non ci sono giocatori da poter guardare!</it>
            <nl>Er zijn geen spelers om te volgen</nl>
            <fr>Il n'y a pas de joueur à suivre</fr>
        </text>
    </l10n>
</modDesc>
